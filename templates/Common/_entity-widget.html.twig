{% set noMicrodata = true %}

<div class="ladb-entity-widget">
    <div class="ladb-box ladb-box-hover" onclick="$(this).ladbBoxLinkClick(event, { location:'{{ ladb_entity_url_action(entity) }}'})">
        <div class="ladb-image">
            <a href="{{ ladb_entity_url_action(entity) }}">{% include 'Common/_avatar.part.html.twig' with { 'size':50, 'noLazyLoad':true, 'noRounded':true } %}</a>
        </div>
        <div class="ladb-body">
            <div class="ladb-heading">{% block heading %}<a href="{{ ladb_entity_url_action(entity) }}">{{ entity.title }}</a>{% endblock %}</div>
            <div class="ladb-subheading">{% block subheading %}{% if entity.user is defined %}{% include 'Common/_author.part.html.twig' %}{% endif %}{% include 'Common/_age.part.html.twig' %}{% endblock %}</div>
            <ul class="ladb-counters ladb-hidden-mobile">{% block entityMetas %}{% endblock %}</ul>
        </div>
    </div>
</div>