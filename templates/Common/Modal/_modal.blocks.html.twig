
{# set title #}
{# set embeddedBody (facultative) #}
{# set classes (facultative) #}
{# set bodyClasses (facultative) #}

{% block modal %}
<div id="{{ id }}" class="modal{% if classes is defined %} {{ classes }}{% endif %}" role="dialog" tabindex="-1" aria-hidden="true">
    {% block dialog %}
        <div class="modal-dialog">
            {% block content %}
                <div class="modal-content">
                    {% block contentInner %}
                        {% block header %}
                            <div class="modal-header">
                                {% block headerInner %}
                                    {% block headerMinitoolsOuter %}
                                        <div class="ladb-minitools pull-right">
                                            {% block headerMinitoolsInner %}
                                                <a type="button" class="ladb-minitools-btn" data-dismiss="modal" aria-hidden="true"><i class="ladb-icon-remove"></i></a>
                                            {% endblock %}
                                        </div>
                                    {% endblock %}
                                    {% if title is defined %}<h3 id="{{ id }}_label" class="modal-title">{{ title|raw }}</h3>{% endif %}
                                {% endblock %}
                            </div>
                        {% endblock %}
                        {% block body %}
                            <div class="modal-body{% if embeddedBody is defined and embeddedBody %} ladb-padding-remove{% endif %}{% if bodyClasses is defined %} {{ bodyClasses }}{% endif %}">
                                {% block bodyInner %}{% endblock %}
                            </div>
                        {% endblock %}
                        {% block footer %}
                            <div class="modal-footer">
                                {% block footerInner %}{% endblock %}
                            </div>
                        {% endblock %}
                    {% endblock %}
                </div>
            {% endblock %}
        </div>
    {% endblock %}
</div>
{% endblock %}


