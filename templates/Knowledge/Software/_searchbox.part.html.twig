{% extends 'Core/Search/_searchbox.part.html.twig' %}

{% set placeholder = 'search.in.softwares'|trans() %}
{% set searchPath = path('core_software_list') %}
{% set masonry = true %}

{% block filtersDropdown %}
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="authors" data-label="Auteurs" data-editable="true" data-icon="user"><i class="ladb-icon-user"></i> Auteurs</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="publisher" data-label="Editeur" data-editable="true" data-icon="software"><i class="ladb-icon-software"></i> Editeur</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="addon" data-label="Plugin" data-editable="true" data-icon="addon" data-proposals-url="{{ path('core_search_typeahead_softwares_json')|raw }}"><i class="ladb-icon-addon"></i> Plugin pour ...</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="open-source" data-label="Open source" data-editable="false" data-icon="open-source"><i class="ladb-icon-open-source"></i> Open source</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="pricings" data-label="Tarifications" data-editable="true" data-icon="funding" data-proposals="Gratuit,Gratuit pour usage personnel,Gratuit avec fonctionnalités limitées,Payant"><i class="ladb-icon-funding"></i> Tarifications</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="os" data-label="Systèmes d'exploitation" data-editable="true" data-icon="operating-system" data-proposals="Windows,Mac,Linux,Android,iOS"><i class="ladb-icon-operating-system"></i> Systèmes d'exploitation</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="features" data-label="Fonctionnalités" data-editable="true" data-icon="filter"><i class="ladb-icon-filter"></i> Fonctionnalités</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="languages" data-label="Langues" data-editable="true" data-icon="answer"><i class="ladb-icon-answer"></i> Langues</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="with-review" data-label="Avec avis" data-editable="false" data-icon="review"><i class="ladb-icon-review"></i> Avec avis</a></li>
    <li class="divider{% if not is_granted('ROLE_USER') %} hidden{% endif %}"></li>
    <li{% if not is_granted('ROLE_USER') %} class="hidden"{% endif %}><a class="ladb-smartsearch-facet" data-type="filter" data-name="rejected" data-label="Rejetés" data-icon="thumb-down"><i class="ladb-icon-thumb-down"></i> Rejetés</a></li>
    {# Hidden filters #}
    <li class="hidden"><a class="ladb-smartsearch-facet" data-type="filter" data-name="supported-files" data-label="Fichiers supportés" data-editable="true" data-icon="file"><i class="ladb-icon-file ladb-icon-fixed-center"></i> Fichiers supportés</a></li>
{% endblock %}

{% block sortersDropdown %}
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-recent" data-label="Récents" data-unique="true" data-icon="time"><i class="ladb-icon-time"></i> Récents</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-popular-views" data-label="Plus vus" data-unique="true" data-icon="eye"><i class="ladb-icon-eye"></i> Plus vus</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-popular-likes" data-label="Préférés" data-unique="true" data-icon="like"><i class="ladb-icon-like"></i> Préférés</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-popular-comments" data-label="Plus commentés" data-unique="true" data-icon="comment"><i class="ladb-icon-comment"></i> Plus commentés</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-popular-rating" data-label="Mieux notés" data-unique="true" data-icon="review"><i class="ladb-icon-review"></i> Mieux notés</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-random" data-label="Aléatoire" data-unique="true" data-random="true" data-icon="random"><i class="ladb-icon-random"></i> Aléatoire</a></li>
    {% if is_granted('ROLE_USER') %}
        <li class="divider"></li>
        <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-completion" data-label="Remplissage" data-unique="true" data-icon="percent"><i class="ladb-icon-percent"></i> Remplissage</a></li>
    {% endif %}
{% endblock %}

{% block searchboxShortcuts %}
    <li><a class="ladb-smartsearch-shortcut" data-query="@addon:sketchup"><i class="ladb-icon-sketchup"></i> Plugins Sketchup</a></li>
{% endblock %}
