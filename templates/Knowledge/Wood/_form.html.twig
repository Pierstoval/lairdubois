{% extends 'Knowledge/_form.html.twig' %}

{% set navSection = 'about' %}

{% block bodyJavascripts %}
    {{ parent() }}
    {% include 'Core/Picture/_form-gallery-script.part.html.twig' with { 'formSection':'grain', 'fieldId':form.grainValue.data.vars.id, 'maxPictureCount':1 } %}
{% endblock %}

{% block sidenav %}
    {{ parent() }}
    <li id="name_sidenav"><a href="#name"><i class="ladb-icon-title"></i> {{ 'knowledge.wood.field.name'|trans() }}</a></li>
    <li id="grain_sidenav"><a href="#grain"><i class="ladb-icon-camera"></i> {{ 'knowledge.wood.field.grain'|trans() }}</a></li>
{% endblock %}

{% block sections %}
    <div class="panel panel-info">
        <div class="panel-body">
            <p>{{ 'knowledge.wood.new_warning'|trans()|raw }}</p>
            <em>{{ 'default.warning.may_be_rejected'|trans() }}</em>
        </div>
    </div>
    {{ parent() }}
    <section id="name_section">
        <div class="form-section">
            <p class="form-section-title"><i class="ladb-icon-title"></i> {{ 'knowledge.wood.field.name'|trans() }} <span class="ladb-mandatory">*</span></p>
            <div class="row">
                <div class="col-sm-7 col-xs-12">
                    {% include 'Knowledge/_form-fieldset-value-text.part.html.twig' with { 'form':form.nameValue, 'field':constant('\\Ladb\\CoreBundle\\Entity\\Knowledge\\Wood::FIELD_NAME'), 'fieldLabel':('knowledge.wood.field.name'|trans()), 'isCompact':true } %}
                </div>
                <div class="col-sm-5 col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-heading"><i class="ladb-icon-help"></i> {{ 'default.help'|trans() }}</div>
                        <div class="panel-body small">
                            {{ ('knowledge.wood.help.name')|trans()|ladb_markdown|raw }}
                            {{ ('knowledge.wood.form.help.name')|trans()|ladb_markdown|raw }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="grain_section">
        <div class="form-section">
            <p class="form-section-title"><i class="ladb-icon-camera"></i> {{ 'knowledge.wood.field.grain'|trans() }} <span class="ladb-mandatory">*</span></p>
            <div class="row">
                <div class="col-sm-7 col-xs-12">
                    {% include 'Knowledge/_form-fieldset-value-picture.part.html.twig' with { 'formSection':'grain', 'form':form.grainValue, 'field':constant('\\Ladb\\CoreBundle\\Entity\\Knowledge\\Wood::FIELD_GRAIN'), 'fieldLabel':('knowledge.wood.field.grain'|trans()), 'quality':constant('\\Ladb\\CoreBundle\\Entity\\Core\\Picture::QUALITY_HD') } %}
                </div>
                <div class="col-sm-5 col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-heading"><i class="ladb-icon-help"></i> {{ 'default.help'|trans() }}</div>
                        <div class="panel-body small">
                            {{ ('knowledge.wood.help.grain')|trans()|ladb_markdown|raw }}
                            {{ ('knowledge.wood.form.help.grain')|trans()|ladb_markdown|raw }}
                            {{ ('knowledge.wood.form.help.legend')|trans({ '%field%':(('knowledge.wood.field.grain')|trans())})|ladb_markdown|raw }}
                            {{ ('knowledge.wood.form.help.source')|trans()|ladb_markdown|raw }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
