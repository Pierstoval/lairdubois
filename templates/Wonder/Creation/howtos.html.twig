{% extends 'Common/Layout/_list.html.twig' %}

{% set pageUrl = url('core_creation_howtos', { 'id':creation.id }) %}
{% set pageTitle = 'Pas à pas associés à '~creation.title %}
{% set pageDescription = 'Pas à pas associés à la création' %}

{% set navSection = 'creations' %}

{% set masonry = true %}
{% set masonryWide = true %}
{% set hideHeaderContainer = false %}

{% block bodyHeaderContainerContent %}
    {% include 'Common/Header:_entity-header.part.html.twig' with { 'entity':creation } %}
{% endblock %}

{% block bodyContainerContent %}
    {% if howtos.count == 0 %}
        <div class="alert alert-info">
            Aucun pas à pas n'est associé à cette création.
        </div>
    {% else %}
        {% embed 'Howto/Howto:_list-filterbar.part.html.twig' %}
            {% set filterPath = 'core_creation_howtos_filter' %}
            {% set filterPathParameters = { 'id':creation.id } %}
            {% block filterbarRightContent%}
                <span class="ladb-heading">{{ creation.howtoCount }} {{ 'howto.howto.choice.entities'|transchoice(creation.howtoCount) }}</span>
            {% endblock %}
        {% endembed %}
    {% endif %}
    {{ parent() }}
{% endblock %}

{% block autopagerContainerInner %}
    {% include 'Howto/Howto:_list-n.part.html.twig' %}
{% endblock %}