{% extends 'Wonder/Workshop:_form.html.twig' %}

{% set pageTitle = 'wonder.workshop.new'|trans() %}
{% set formAction = path('core_workshop_create') %}
{% set hideWarning = hideWarning|default(false) %}

{% block sidenavHeading %}
    <i class="ladb-icon-plus"></i> {{ 'wonder.workshop.new'|trans() }}
{% endblock %}

{% block form_buttons %}
    {% include 'Common/_form-btn-loading.part.html.twig' with { 'text':('default.save'|trans()), 'classes':'ladb-form-save-btn btn-primary btn-block' } %}
{% endblock %}

{% block body %}
    {{ parent() }}
    {% if not hideWarning %}
        {% include 'Common/_new-warning-modal.part.html.twig' with { 'id':'warning_workshop_modal', 'title':('wonder.workshop.new'|trans()), 'textTransKey':'wonder.workshop.new_warning', 'cancelPath':'core_workshop_list' } %}
    {% endif %}
{% endblock %}

{% block bodyJavascripts %}
    {{ parent() }}
    {% if not hideWarning %}
        <script>
            $(document).ready(function() {
                $("#warning_workshop_modal").modal();
            });
        </script>
    {% endif %}
{% endblock %}
