{% extends 'Event/Event/_form.html.twig' %}

{% set pageTitle = 'event.event.new'|trans() %}
{% set formAction = path('core_event_create') %}
{% set hideWarning = hideWarning|default(false) %}

{% block sidenavHeading %}
    <i class="ladb-icon-plus"></i> {{ 'event.event.new'|trans() }}
{% endblock %}

{% block form_buttons %}
    {% include 'Common/_form-btn-loading.part.html.twig' with { 'text':('default.save'|trans()), 'classes':'ladb-form-save-btn btn-primary btn-block' } %}
{% endblock %}

{% block body %}
    {{ parent() }}
    {% if not hideWarning %}
        {% include 'Common/_new-warning-modal.part.html.twig' with { 'id':'warning_event_modal', 'title':('event.event.new'|trans()), 'textTransKey':'event.event.new_warning', 'cancelPath':'core_event_list' } %}
    {% endif %}
{% endblock %}

{% block bodyJavascripts %}
    {{ parent() }}
    {% if not hideWarning %}
        <script>
            $(document).ready(function() {
                $("#warning_event_modal").modal();
            });
        </script>
    {% endif %}
{% endblock %}
