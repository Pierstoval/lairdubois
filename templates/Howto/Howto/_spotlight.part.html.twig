    {% endif %}
    {% if entity.providerCount > 0 %}
        <li class="ladb-linkto ladb-hidden-mobile"><a href="{{ path('core_howto_providers', { 'id':entity.id }) }}" data-tooltip="tooltip" title="{{ 'howto.howto.linked_to'|trans() }} {{ entity.providerCount }} {{ 'knowledge.provider.choice.entities'|transchoice(entity.providerCount) }}"><i class="ladb-icon-provider"></i></a></li>
    {% endif %}
{% endblock %}