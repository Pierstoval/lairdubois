{% extends 'Core/Resource/_spotlight.part.html.twig' %}

{% block counters %}
    {{ parent() }}
    {% if entity.planCount > 0 %}
        <li class="ladb-linkto ladb-hidden-mobile"><a href="{{ path('core_howto_plans', { 'id':entity.id }) }}" data-tooltip="tooltip" title="{{ 'howto.howto.linked_to'|trans() }} {{ entity.planCount }} {{ 'wonder.plan.choice.entities'|transchoice(entity.planCount) }}"><i class="ladb-icon-plan"></i></a></li>
