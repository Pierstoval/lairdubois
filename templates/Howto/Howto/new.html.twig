{% extends 'Howto/Howto/_form.html.twig' %}

{% set pageTitle = 'howto.howto.new'|trans() %}
{% set formAction = path('core_howto_create') %}
{% set hideWarning = hideWarning|default(false) %}

{% block sidenavHeading %}
    <i class="ladb-icon-plus"></i> {{ 'howto.howto.new'|trans() }}
{% endblock %}

{% block form_buttons %}
    {% include 'Common/_form-btn-loading.part.html.twig' with { 'text':'Enregistrer et ajouter un article', 'classes':'ladb-form-save-btn btn-primary btn-block' } %}
{% endblock %}

{% block body %}
    {{ parent() }}
    {% if not hideWarning %}
        {% include 'Common/_new-warning-modal.part.html.twig' with { 'id':'warning_howto_modal', 'title':('howto.howto.new'|trans()), 'textTransKey':'howto.howto.new_warning', 'cancelPath':'core_howto_list' } %}
    {% endif %}
{% endblock %}

{% block bodyJavascripts %}
    {{ parent() }}
    {% if not hideWarning %}
        <script>
            $(document).ready(function() {
                $("#warning_howto_modal").modal();
            });
        </script>
    {% endif %}
{% endblock %}