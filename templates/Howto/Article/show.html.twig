{% extends 'Howto/Howto:show.html.twig' %}

{% set pageUrl = ladb_entity_url_action(article, 'show', true, false) %}
{% set pageTitle = howto.title~' - '~article.title %}
{% set pageDescription = article.body|striptags|u.truncate(200, true, '...') %}
{% if article.mainPicture is not null %}
    {% set pageImage = (article.mainPicture.webPath|imagine_filter('400x400o')) %}
    {% set pageImageWidth = '400' %}
    {% set pageImageHeight = '400' %}
{% endif %}

{% block bodyJavascripts %}
    {{ parent() }}
    <script>
        $(function() {
            setTimeout(function() {
                $("#{{ article.sluggedId }}").ladbScrollTo();
            }, 1000);
        });
    </script>
{% endblock %}