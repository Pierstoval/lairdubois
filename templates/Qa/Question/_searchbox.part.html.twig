{% extends 'Core/Search/_searchbox.part.html.twig' %}

{% set placeholder = 'search.in.qa_questions'|trans() %}
{% set searchPath = path('core_qa_question_list', routeParameters) %}
{% set masonry = layout == 'view' %}
{% set masonryWide = layout == 'view' %}

{% block filtersDropdown %}
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="tag" data-label="Tag" data-editable="true" data-icon="tag" data-proposals-url="{{ path('core_search_typeahead_tags_json')|raw }}"><i class="ladb-icon-tag"></i> Tags</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="no-answer" data-label="Sans réponse" data-editable="false" data-icon="answer"><i class="ladb-icon-answer"></i> Sans réponse</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="without-positive-answer" data-label="Sans réponse validée" data-editable="false" data-icon="filter"><i class="ladb-icon-filter"></i> Sans réponse validée</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet ladb-color-best-answer" data-type="filter" data-name="with-best-answer" data-label="Avec meilleure réponse" data-editable="false" data-icon="favorite"><i class="ladb-icon-favorite"></i> Avec meilleure réponse</a></li>
    <li><a class="ladb-smartsearch-facet ladb-color-positive" data-type="filter" data-name="with-positive-answer" data-label="Avec réponses validées" data-editable="false" data-icon="thumb-up"><i class="ladb-icon-thumb-up"></i> Avec réponses validées</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="with-null-answer" data-label="Avec réponses non vérifiées" data-editable="false" data-icon="warning"><i class="ladb-icon-warning"></i> Avec réponses non vérifiées</a></li>
    <li><a class="ladb-smartsearch-facet ladb-color-undetermined" data-type="filter" data-name="with-undetermined-answer" data-label="Avec réponses indécises" data-editable="false" data-icon="warning"><i class="ladb-icon-warning"></i> Avec réponses indécises</a></li>
    <li><a class="ladb-smartsearch-facet ladb-color-negative" data-type="filter" data-name="with-negative-answer" data-label="Avec réponses rejettées" data-editable="false" data-icon="thumb-down"><i class="ladb-icon-thumb-down"></i> Avec réponses rejettées</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="content-creations" data-label="Avec création" data-unique="true" data-icon="creation"><i class="ladb-icon-creation"></i> Avec création</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="content-plans" data-label="Avec plan" data-unique="true" data-icon="plan"><i class="ladb-icon-plan"></i> Avec plan</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="content-howtos" data-label="Avec pas à pas" data-unique="true" data-icon="howto"><i class="ladb-icon-howto"></i> Avec pas à pas</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="author" data-label="Auteur" data-editable="true" data-unique="true" data-icon="user"><i class="ladb-icon-user"></i> Auteur</a></li>
    {% if is_granted("ROLE_USER") %}
        <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="mine" data-value="all" data-label="Mes questions" data-unique="true" data-icon="question"><i class="ladb-icon-question"></i> Mes questions</a></li>
        <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="mine" data-value="draft" data-label="Mes brouillons" data-unique="true" data-icon="draft"><i class="ladb-icon-draft"></i> Mes brouillons</a></li>
    {% endif %}
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="period" data-value="last7days" data-label="7 derniers jours" data-unique="true" data-icon="calendar-week"><i class="ladb-icon-calendar-week"></i> 7 derniers jours</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="filter" data-name="period" data-value="last30days" data-label="30 derniers jours" data-unique="true" data-icon="calendar-month"><i class="ladb-icon-calendar-month"></i> 30 derniers jours</a></li>
{% endblock %}

{% block sortersDropdown %}
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-recent" data-label="Récents" data-unique="true" data-icon="time"><i class="ladb-icon-time"></i> Récents</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-popular-views" data-label="Plus vus" data-unique="true" data-icon="eye"><i class="ladb-icon-eye"></i> Plus vus</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-popular-likes" data-label="Préférés" data-unique="true" data-icon="like"><i class="ladb-icon-like"></i> Préférés</a></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-popular-answers" data-label="Plus de réponses" data-unique="true" data-icon="answer"><i class="ladb-icon-answer"></i> Plus de réponses</a></li>
    <li class="divider"></li>
    <li><a class="ladb-smartsearch-facet" data-type="sorter" data-name="sort-random" data-label="Aléatoire" data-unique="true" data-random="true" data-icon="random"><i class="ladb-icon-random"></i> Aléatoire</a></li>
{% endblock %}

{% block searchboxShortcuts %}
    {% if is_granted("ROLE_USER") %}
        <li><a class="ladb-smartsearch-shortcut" data-query="@mine:all"><i class="ladb-icon-user"></i> Mes questions</a></li>
    {% endif %}
    <li><a class="ladb-smartsearch-shortcut" data-query="@no-answer"><i class="ladb-icon-answer"></i> Sans réponse</a></li>
{% endblock %}
