{# set actionPath #}

{% form_theme form 'Common/_form-theme.twig.twig' %}

<tr class="ladb-workflow-part-row-form">
    <td>
        {{ form_start(form, { 'action':formAction, 'method':'POST', 'attr':{ 'novalidate':'novalidate' } }) }}
            <div class="form-group col-xs-12 col-sm-3">
                {{ form_label(form.number) }}
                {{ form_errors(form.number) }}
                {{ form_widget(form.number, { 'attr':{ 'class':'form-control ladb-input-number' } }) }}
            </div>
            <div class="form-group col-xs-12 col-sm-7">
                {{ form_label(form.name) }}
                {{ form_errors(form.name) }}
                {{ form_widget(form.name, { 'attr':{ 'class':'form-control ladb-input-name' } }) }}
            </div>
            <div class="form-group col-xs-12 col-sm-2">
                {{ form_label(form.count) }}
                {{ form_errors(form.count) }}
                {{ form_widget(form.count, { 'attr':{ 'class':'form-control' } }) }}
            </div>
        {{ form_end(form) }}
        <div class="pull-right">
            {% block buttons %}
                <button class="btn btn-default ladb-part-cancel-btn">{{ 'default.cancel'|trans() }}</button>
                <button class="btn btn-primary ladb-part-save-btn">{{ 'default.save'|trans() }}</button>
            {% endblock %}
        </div>
        {% include 'Common/_loading-panel.part.html.twig' %}
    </td>
</tr>

