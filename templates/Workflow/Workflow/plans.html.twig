{% extends 'Common/Layout/_list.html.twig' %}

{% set pageUrl = url('core_workflow_plans', { 'id':workflow.id }) %}
{% set pageTitle = 'Plans associés à '~workflow.title %}
{% set pageDescription = 'Plans associés au processus' %}

{% set navSection = 'workflows' %}

{% set masonry = true %}
{% set hideHeaderContainer = false %}

{% block bodyHeaderContainerContent %}
    {% include 'Common/Header:_entity-header.part.html.twig' with { 'entity':workflow } %}
{% endblock %}

{% block bodyContainerContent %}
    {% if plans.count == 0 %}
        <div class="alert alert-info">
            Aucun plan n'est associé à ce processus.
        </div>
    {% else %}
        {% embed 'Wonder/Plan:_list-filterbar.part.html.twig' %}
            {% set filterPath = 'core_workflow_plans_filter' %}
            {% set filterPathParameters = { 'id':workflow.id } %}
            {% block filterbarRightContent%}
                <span class="ladb-heading">{{ workflow.planCount }} {{ 'wonder.plan.choice.entities'|transchoice(workflow.planCount) }}</span>
            {% endblock %}
        {% endembed %}
    {% endif %}
    {{ parent() }}
{% endblock %}

{% block autopagerContainerInner %}
    {% include 'Wonder/Plan:_list-n.part.html.twig' %}
{% endblock %}