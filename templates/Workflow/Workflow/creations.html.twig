{% extends 'Common/Layout/_list.html.twig' %}

{% set pageUrl = url('core_workflow_creations', { 'id':workflow.id }) %}
{% set pageTitle = 'Créations associées à '~workflow.title %}
{% set pageDescription = 'Créations associées au processus' %}

{% set navSection = 'workflows' %}

{% set masonry = true %}
{% set hideHeaderContainer = false %}

{% block bodyHeaderContainerContent %}
    {% include 'Common/Header:_entity-header.part.html.twig' with { 'entity':workflow } %}
{% endblock %}

{% block bodyContainerContent %}
    {% if creations.count == 0 %}
        <div class="alert alert-info">
            Aucune création n'est associée à ce processus.
        </div>
    {% else %}
        {% embed 'Wonder/Creation:_list-filterbar.part.html.twig' %}
            {% set filterPath = 'core_workflow_creations_filter' %}
            {% set filterPathParameters = { 'id':workflow.id } %}
            {% block filterbarRightContent%}
                <span class="ladb-heading">{{ workflow.creationCount }} {{ 'wonder.creation.choice.entities'|transchoice(workflow.creationCount) }}</span>
            {% endblock %}
        {% endembed %}
    {% endif %}
    {{ parent() }}
{% endblock %}

{% block autopagerContainerInner %}
    {% include 'Wonder/Creation/_list-n.part.html.twig' %}
{% endblock %}