{% extends 'Core/Feedback:_form.html.twig' %}

{% set i18nPrefix = i18nPrefix|default(ladb_entity_type_stripped_name(entity)) %}
{% set formAction = path('core_feedback_create', { 'entityType':entity.type, 'entityId':entity.id }) %}

{% block title %}<i class="ladb-icon-plus"></i> {{ ('feedback.default.new')|trans() }}{% endblock %}

{% block buttons %}
    <div class="alert alert-info">
        <div class="media">
            <div class="media-left"><i class="ladb-icon-info ladb-icon-lg"></i></div>
            <div class="media-body">
                <h4>A lire avant de publier</h4>
                <p>{{ ('feedback.'~i18nPrefix~'.form.new_help')|trans|ladb_markdown|raw }}</p>
                <p><a href="{{ path('core_faq_question_show', { 'id':'quest-ce-quun-retour-dexperience' }) }}" class="alert-link">En savoir plus...</a></p>
            </div>
        </div>
    </div>
    {{ parent() }}
    {% include 'Common/_form-btn-loading.part.html.twig' with { 'text':('default.publish'|trans()), 'classes':'btn-primary' } %}
{% endblock %}
