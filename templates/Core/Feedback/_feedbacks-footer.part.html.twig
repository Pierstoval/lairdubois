{# set feedbackContext #}

{% set i18nPrefix = i18nPrefix|default(ladb_entity_type_stripped_name(entity)) %}

<div class="ladb-feedbacks-footer">
    {% if feedbackContext.feedbackCount == 0 %}
        <div class="panel panel-info ladb-margin-top">
            <div class="panel-body text-center">{{ ('feedback.'~i18nPrefix~'.none')|trans|raw }}</div>
        </div>
    {% endif %}
    {% if feedbackContext.isFeedbackable %}
        <div class="ladb-btns-bar">
            <a href="{{ path('core_feedback_new', { 'entityType':feedbackContext.entityType, 'entityId':feedbackContext.entityId }) }}" id="ladb_feedback_btn" class="btn btn-primary btn-lg" data-loading-text="{{ 'default.loading'|trans() }}"><i class="ladb-icon-plus"></i> {{ ('feedback.default.new')|trans() }}</a>
        </div>
    {% endif %}
</div>
