{% extends 'Core/User:_show-list.html.twig' %}

{% set masonry = true %}

{% block bodyContainerContent %}
    {% if workshops.count == 0 and filter != 'draft' %}
        <div class="alert alert-info ladb-margin-top">
            {% if is_granted("ROLE_USER") and user.id == app.user.id %}
                <p>Vous n'avez pas encore publié d'<strong>atelier</strong> !</p>
                <p><a href="{{ path('core_workshop_new') }}" class="btn btn-primary"><i class="ladb-icon-plus"></i> {{ 'wonder.workshop.new'|trans() }}</a></p>
            {% else %}
                <strong>{{ user.username }}</strong> n'a pas encore publié d'atelier.
            {% endif %}
        </div>
    {% else %}
        {% embed 'Wonder/Workshop:_list-filterbar.part.html.twig' %}
            {% set filterPath = 'core_user_show_workshops_filter' %}
            {% set filterPathParameters = { 'username':user.usernameCanonical } %}
            {% set customFilterDefs = {
                'draft':    { 'label':('default.choice.draft'|trans({'count': 2})|capitalize), 'path':path('core_user_show_workshops_filter', { 'username':user.usernameCanonical, 'filter':'draft' }), 'hidden':(not isDraftVisible) },
            } %}
            {% block filterbarRightContent%}
                <span class="ladb-heading">
                    {% if filter == 'draft' and isDraftVisible %}
                        {{ user.meta.privateWorkshopCount~' '~('default.choice.draft'|transchoice(user.meta.privateWorkshopCount)) }}
                    {% else %}
                        {{ user.meta.publicWorkshopCount }} {{ 'wonder.workshop.choice.entities'|transchoice(user.meta.publicWorkshopCount) }}{% if isDraftVisible and user.meta.privateWorkshopCount > 0 %} (+{{ user.meta.privateWorkshopCount~' '~('default.choice.draft'|transchoice(user.meta.privateWorkshopCount)) }}){% endif %}
                    {% endif %}
                </span>
            {% endblock %}
        {% endembed %}
    {% endif %}
    {{ parent() }}
{% endblock %}

{% block autopagerContainerInner %}
    {% include 'Wonder/Workshop:_list-n.part.html.twig' %}
{% endblock %}
