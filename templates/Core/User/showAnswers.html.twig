{% extends 'Core/User/_show-list.html.twig' %}

{% block headStylesheets %}
    {{ parent() }}
    {% stylesheets filter='less,?yui_css'
        '@LadbCoreBundle/Resources/assets/less/ladb/layout/qa.less' %}
        <link rel="stylesheet" type="text/css" href="{{ asset_url }}" media="screen" />
    {% endstylesheets %}
{% endblock %}

{% block bodyContainerContent %}
    {% if items|length == 0 %}
        <div class="alert alert-info ladb-margin-top">
            {% if is_granted("ROLE_USER") and user.id == app.user.id %}
                <p>Vous n'avez pas encore publié de <strong>réponse</strong> !</p>
            {% else %}
                <strong>{{ user.username }}</strong> n'a pas encore publié de réponse.
            {% endif %}
        </div>
    {% else %}
        {% embed 'Common/_list-filterbar.part.html.twig' with { 'classes':'ladb-margin-bottom' } %}
            {% set filterDefs = {} %}
            {% block filterbarRightContent%}
                <span class="ladb-heading">{{ user.meta.answerCount }} {{ 'qa.answer.choice.entities'|transchoice(user.meta.answerCount) }}</span>
            {% endblock %}
        {% endembed %}
    {% endif %}
    {{ parent() }}
{% endblock %}

{% block autopagerContainerInner %}
    {% include 'Qa/Answer:_list-byuser-n.part.html.twig' %}
{% endblock %}
