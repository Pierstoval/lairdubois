{% extends 'Common/Layout/_form.html.twig' %}

{% set pageTitle = 'user.settings'|trans() %}
{% set formAction = path('core_user_team_create') %}

{% block sidenavHeading %}
    <i class="ladb-icon-settings"></i> {{ 'team.new'|trans() }}
{% endblock %}

{% block sidenav %}
    <li><a href="#account"><i class="ladb-icon-users"></i> {{ 'user.account'|trans() }}</a></li>
{% endblock %}

{% block form_buttons %}
    {% include 'Common/_form-btn-loading.part.html.twig' with { 'text':('default.save'|trans()), 'classes':'ladb-form-save-btn btn-primary btn-block' } %}
{% endblock %}

{% block sections %}
    <div class="panel panel-info">
        <div class="panel-body">
            <p>{{ 'team.new_warning'|trans()|raw }}</p>
        </div>
    </div>
    {{ form_errors(form) }}
    {% embed 'Common/_form-section.part.html.twig' with { 'mandatory':true, 'icon':'users', 'title':('user.account'|trans()), 'formSection':'account' } %}
        {% block body %}
            <div class="form-group">
                {{ form_label(form.username, 'Nom d\'utilisateur du collectif') }}
                <p class="help-block">
                    Choissez bien le nom d'utilisateur de votre collectif. Il ne pourra être changé que 2 fois.
                </p>
                <p class="help-block">
                    Il donnera accès à la page du collectif.<br>
                    Exemple : https://www.lairdubois.fr/@<strong>lescopains</strong>
                </p>
                {{ form_errors(form.username) }}
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">@</span>
                    {{ form_widget(form.username, { 'attr': { 'class':'form-control input-lg' } }) }}
                </div>
                <p class="help-block"><i class="ladb-icon-info"></i> Seules les lettres non accentuées et les chiffres sont permis ici.</p>
                <hr>
                <p class="help-block"><i class="ladb-icon-help"></i> <a href="{{ path('core_faq_question_show', { 'id':'quest-ce-quun-collectif' }) }}">Qu'est-ce qu'un Collectif ?</a> </p>
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}

