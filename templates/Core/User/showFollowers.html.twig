{% extends 'Core/User/_show-list.html.twig' %}

{% block bodyContainerContent %}
    {% if followers.count == 0 %}
        <div class="alert alert-info ladb-margin-top">
            {% if is_granted("ROLE_USER") and user.id == app.user.id %}
                Vous n'avez pas d'abonnés.
            {% else %}
                <strong>{{ user.username }}</strong> n'a pas d'abonnés.
            {% endif %}
        </div>
    {% else %}
        {% embed 'Core/User/_list-filterbar.part.html.twig' with { 'classes':'ladb-filterbar-line' } %}
            {% set filterPath = 'core_user_show_followers_filter' %}
            {% set filterPathParameters = { 'username':user.usernameCanonical } %}
            {% block filterbarRightContent%}
                <span class="ladb-heading">{{ user.meta.followerCount }} {{ 'follower.choice.entities'|transchoice(user.meta.followerCount) }}</span>
            {% endblock %}
        {% endembed %}
    {% endif %}
    {{ parent() }}
{% endblock %}

{% block autopagerContainerInner %}
    {% include 'Core/Follower:_follower-list-n.part.html.twig' %}
{% endblock %}
