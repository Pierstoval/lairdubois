{% if followerContext.id is null %}
    <a rel="nofollow" href="{{ path('core_follower_create', { 'followingUserId':followerContext.followingUser.id, 'rtu':app.request.requesturi }) }}" class="btn btn-primary" data-tooltip="tooltip" title="{{ 'follower.follow_tooltip'|trans({ '%name%':followerContext.followingUser.displayname}) }}" data-loading-text="<i class='ladb-icon-spinner'></i> {{ 'follower.follow'|trans() }}" onclick="{% if is_granted("ROLE_USER") %}$(this).ladbHrefAjax(event, { targetSelector:'.ladb-follower-widget', replaceTargetInnerOnly:true });{% else %}$(this).button('loading');{% endif %}">
        <i class="ladb-icon-follow"></i> {{ 'follower.follow'|trans() }}
    </a>
{%  else %}
    <a rel="nofollow" href="{{ path('core_follower_delete', { 'id' : followerContext.id }) }}" class="btn btn-default active" data-tooltip="tooltip" title="{{ 'follower.following_tooltip'|trans() }}" data-loading-text="<i class='ladb-icon-spinner'></i> {{ 'follower.following'|trans() }}" onclick="{% if is_granted("ROLE_USER") %}$(this).ladbHrefAjax(event, { targetSelector:'.ladb-follower-widget', replaceTargetInnerOnly:true });{% else %}$(this).button('loading');{% endif %}">
        <i class="ladb-icon-check-square"></i> {{ 'follower.following'|trans() }}
    </a>
{% endif %}
{% if followerContext.followingUser.meta.followerCount > 0 %}
    <a href="{{ path('core_user_show_followers', { 'username':followerContext.followingUser.usernameCanonical }) }}" class="btn btn-default" data-tooltip="tooltip" title="{{ followerContext.followingUser.meta.followerCount }}&nbsp;{{ 'follower.choice.entities'|transchoice(followerContext.followingUser.meta.followerCount) }}">{{ followerContext.followingUser.meta.followerCount }}</a>
{% endif %}
